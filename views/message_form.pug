extends layout 

block content 

    a(href="/clubhouse") Go back

    h1 #{title}

    form(method="POST" action="")
        div
            label(for="message") Write a message:
            div
            textarea#message(type="text" name="message" rows="5" cols="30")
        button.button(type="submit") Submit

    if errors 
        ul
            for error in errors
                li!= error.msg